{
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "comma-dangle": [2, "never"],
    "react/no-deprecated": 0,
    "react/prefer-stateless-function": 0,
    "space-before-function-paren": [1, "never"]
  }
}
